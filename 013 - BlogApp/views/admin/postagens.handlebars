<h2>Lista de postagens: </h2>
<hr />
<a href="/admin/postagens/add"><button class="btn btn-success">Nova postagem</button></a>

{{#each postagens}}
  <div class="card mt-4">
    <div class="card-body">
      <h4>{{titulo}}</h4>
      <p>Descricao: {{descricao}}</p>
      <small>Categoria: {{categoria.nome}}</small>
      <br />
      <small>conteudo: {{conteudo}}</small>
      <br />
      <small>Data: {{data}}</small>
      <br />

      <a href="/admin/postagens/edit/{{_id}}">
        <button class="btn btn-success mt-4">Editar postagem</button>
      </a>
      <a href="/admin/postagens/deletar/{{_id}}">
        <button class="btn btn-danger mt-4">Deletar postagem</button>
      </a>
    </div>
  </div>
{{else}}
  <p class="mt-4">Nenhuma Postagem registrada</p>
{{/each}}